@model List<CategoryKPI1>

<!DOCTYPE html>
<html>
<head>
    <title>KPI Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            text-align: center;
        }
        table {
            margin: 0 auto;
            border-collapse: collapse;
            width: 60%;
            background-color: white;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:hover {background-color: #f5f5f5;}
    </style>
</head>
<body>
    <h2>KPI Dashboard</h2>
    <table>
        <tr>
            <th>Category</th>
            <th>Average Solve Time (Hours)</th>
        </tr>
        @foreach (var kpi in Model)
        {
            <tr>
                <td>@kpi.CategoryName</td>
                <td>@string.Format("{0:F2}", kpi.AverageSolveTime)</td>
            </tr>
        }
    </table>
</body>
</html>
