@model IEnumerable<Enviroment.Models.Ticket>
@{
    ViewData["Title"] = "Ticket List";
}

<h2>Tickets</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Ticket</a>
    <a asp-action="OpenTickets" class="btn btn-info">Show Open Tickets</a>
</p>

<!-- Search Form -->
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" />
        </p>
    </div>
</form>


{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Employee Name</th>
                <th>Summary</th> <!-- Added Summary -->
                <th>Type</th> <!-- Added Type -->
                <th>Category</th>
                <th>Status</th>
                <th>Team</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.TicketID</td>
                    <td>@ticket.CustomerName</td>
                    <td>@ticket.EmailAddress</td>
                    <td>@ticket.EmployeeName</td>
                    <td>@ticket.Summary</td> <!-- Display Summary -->
                    <td>@ticket.Type</td> <!-- Display Type -->
                    <td>@ticket.Category</td>
                    <td>@ticket.Status</td>
                    <td>@ticket.Team</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@ticket.TicketID" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@ticket.TicketID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
